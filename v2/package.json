{
  "name": "shiba-v2",
  "private": true,
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "watch": "concurrently -c auto npm:watch:bundle npm:watch:ts npm:watch:rs",
    "watch:bundle": "npm run bundle -- --watch",
    "watch:ts": "npm run check:ts -- --watch --preserveWatchOutput --pretty",
    "watch:rs": "cargo watch --watch src -- cargo check --color always",
    "bundle": "esbuild web/index.tsx --bundle --outfile=dist/bundle.js --platform=browser",
    "release": "concurrently -c auto npm:release:bundle npm:release:css:github-markdown npm:release:css:highlight.js npm:release:css:style",
    "release:bundle": "esbuild web/index.tsx --bundle --outfile=dist/bundle.min.js --platform=browser --minify",
    "release:css:style": "postcss --no-map --output dist/style.min.css ./dist/style.css",
    "release:css:github-markdown": "postcss --no-map --output dist/github-markdown.min.css ./node_modules/github-markdown-css/github-markdown.css",
    "release:css:highlight.js": "postcss --no-map --output dist/hljs-github.min.css ./node_modules/highlight.js/styles/github.css",
    "fmt": "concurrently -c auto npm:fmt:cargo npm:fmt:ts",
    "fmt:cargo": "cargo fmt",
    "fmt:ts": "prettier --write 'web/**/*.ts' 'web/**/*.tsx'",
    "check": "concurrently -c auto npm:check:ts npm:check:rs npm:check:prettier npm:check:rustfmt",
    "check:ts": "tsc --noEmit -p .",
    "check:rs": "cargo clippy -- -D warnings",
    "check:prettier": "prettier --check 'web/**/*.ts' 'web/**/*.tsx'",
    "check:rustfmt": "cargo fmt --check",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "rhysd <lin90162@yahoo.co.jp> (https://rhysd.github.io/)",
  "license": "MIT",
  "dependencies": {
    "github-markdown-css": "^5.1.0",
    "hastscript": "^7.1.0",
    "mousetrap": "^1.6.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rehype-highlight": "^6.0.0",
    "rehype-react": "^7.1.1",
    "rehype-sanitize": "^5.0.1",
    "remark-frontmatter": "^4.0.1",
    "remark-gfm": "^3.0.1",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "unified": "^10.1.2",
    "unist-util-visit": "^4.1.1"
  },
  "devDependencies": {
    "@types/marked": "^4.0.7",
    "@types/mousetrap": "^1.6.9",
    "@types/react": "^18.0.24",
    "@types/react-dom": "^18.0.8",
    "concurrently": "^7.5.0",
    "cssnano": "^5.1.14",
    "esbuild": "^0.15.12",
    "hast": "^1.0.0",
    "postcss": "^8.4.18",
    "postcss-cli": "^10.0.0",
    "prettier": "^2.7.1",
    "typescript": "^4.8.4"
  }
}
