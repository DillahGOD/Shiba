{
  "name": "shiba-v2",
  "private": true,
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "watch": "concurrently -c auto npm:watch:js npm:watch:ts npm:watch:rs npm:watch:css",
    "watch:js": "npm run bundle:js -- --watch",
    "watch:ts": "npm run lint:ts -- --watch --preserveWatchOutput --pretty",
    "watch:rs": "cargo watch --watch src -- cargo check --color always",
    "watch:css": "npm run bundle:css -- --watch",
    "bundle": "concurrently -c auto npm:bundle:js npm:bundle:css",
    "bundle:js": "esbuild web/index.tsx --bundle --outfile=src/assets/bundle.js --platform=browser --color=true",
    "bundle:css": "esbuild --minify --color=true --outdir=src/assets web/style.css node_modules/github-markdown-css/github-markdown.css node_modules/highlight.js/styles/*.css node_modules/tippy.js/dist/tippy.css node_modules/tippy.js/themes/light.css",
    "release:js": "esbuild web/index.tsx --bundle --outfile=src/assets/bundle.min.js --platform=browser --minify --color=true",
    "fix": "concurrently -m 1 -c auto npm:fix:cargo npm:fix:eslint npm:fix:ts",
    "fix:cargo": "cargo fmt",
    "fix:ts": "prettier --write 'web/**/*.ts' 'web/**/*.tsx'",
    "fix:eslint": "eslint --fix 'web/**/*.ts' 'web/**/*.tsx'",
    "lint": "concurrently -c auto npm:lint:ts npm:lint:rs npm:lint:prettier npm:lint:rustfmt npm:lint:eslint npm:lint:stylelint",
    "lint:ts": "tsc --noEmit -p .",
    "lint:rs": "cargo clippy --color always -- -D warnings",
    "lint:prettier": "prettier --check 'web/**/*.ts' 'web/**/*.tsx'",
    "lint:rustfmt": "cargo fmt --check -- --color always",
    "lint:eslint": "eslint 'web/**/*.ts' 'web/**/*.tsx'",
    "lint:stylelint": "stylelint web/style.css",
    "test": "cargo test",
    "prepare": "cd .. && husky install"
  },
  "author": "rhysd <lin90162@yahoo.co.jp> (https://rhysd.github.io/)",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@mui/icons-material": "^5.10.16",
    "@mui/material": "^5.10.16",
    "dompurify": "^2.4.1",
    "github-markdown-css": "^5.1.0",
    "highlight.js": "^11.7.0",
    "mathjax-full": "^3.2.2",
    "mermaid": "^9.2.2",
    "mousetrap": "^1.6.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tippy.js": "^6.3.7"
  },
  "devDependencies": {
    "@types/dompurify": "^2.4.0",
    "@types/mousetrap": "^1.6.11",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "concurrently": "^7.6.0",
    "esbuild": "^0.15.16",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.2",
    "prettier": "^2.8.0",
    "stylelint": "^14.15.0",
    "stylelint-config-standard": "^29.0.0",
    "typescript": "^4.9.3"
  }
}
